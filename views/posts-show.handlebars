<div class="row justify-content-md-center"style="
    width: auto;
    margin: 0 auto;
    padding: 30px 0;
    background-color: #494848';
">
  <div class="col-sm-6 col-sm-offset-3">
    <div class ="text-center text-primary">
    <h1>{{post.title}}</a></h1>
    <img src="{{post.url}}" class="img-fluid" alt="Responsive image">
</div>
    <div class="text-info text-center">
    <h4>Description: {{post.summary}}</h4>
    </div>
    <div class="text-muted text-left">Owner: {{post.author.username}}
    <div class = "text-light">
        <h6>Level: {{post.level}}</h6>
    <form action="/posts/{{post._id}}/comments" method="post">
    <textarea class='form-control' name="content" placeholder="Comment"></textarea>
    <div class="text-right">
      <button type="submit" class="btn btn-primary">Save</button>
      {{#each post.comments}}
  {{> comment comment=this postId=../post._id}}
{{/each}}
  </form>
  </div>
</div>
