<div class="row justify-content-center"style="
    width: auto;
    margin: 0 auto;
    padding: 30px 0;

">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/posts/new" method="post" class="">
      <legend class="text-primary text-bold" >Create your own Pokemon!</legend>
      <div class="form-group text-info ">
        <label for="post-title">Name of Pokemon</label>
        <input type="text" name="title" class="form-control form-control-lg" id="post-title" placeholder="Enter name">
      </div>
      <div class="form-group text-info">
        <label for="post-url">Image Link</label>
        <input type="url" name="url" class="form-control" id="post-url" placeholder="https://www.cutepokemon.png">
      </div>
      <div class="form-group text-info">
        <label for="post-summary">Summary</label>
        <textarea name="summary" class="form-control" id="post-summary" placeholder="Enter info about the Pokemon!"></textarea>
      </div>
      <div class="form-group text-info">
      <label for="post-level">Lvl of Pokemon</label>
      <input name="level" type="number" class="form-control" id="post-level" placeholder="Level of Pokemon">
    </div>
      <div class='text-right text-info'>
        <button type="submit" class="btn btn-primary">Create Pokemon</button>
      </div>
    </form>
  </div>
</div>
